@{
    ViewData["Title"] = "Modal";
    Layout = null;
}
<div class="modal" id="ModalTeste">
    <div class="modal-dialog" id="smallSize" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ViewData["Title"]</h5>
            </div>
            <div class="modal-body">
                <h3>Corpo do Modal</h3>
            </div>
            <div class="modal-footer">
                <a onclick='' class="btn btn-primary">Salvar</a>
                <a class="btn btn-danger" data-bs-dismiss="modal">Cancelar</a>
            </div>
        </div>
    </div>
</div>